@model KoscielniakInfo.Models.Photo

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Title</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (Model.JobID != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.JobID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Job.DisplayName)
            </dd>
        }
       @if (Model.SchoolID!=null)
       {
        <dt>
            @Html.DisplayNameFor(model => model.SchoolID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.School.DisplayName)
        </dd>
       }
        @if (Model.HobbyID!=null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.HobbyID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Hobby.Title)
            </dd>
        }
        @if (Model.CertificateID!=null)
        {
            <dt>
                @Html.DisplayNameFor(model=>model.CertificateID)
            </dt>
            <dd>
                @Html.DisplayFor(model=>model.Certificate.Name)
            </dd>
        }
        </dl>

        <hr />
        <a href="~/Photos/@Model.URL"><img src="~/Photos/Miniatures/@Model.URL" alt="@Model.Description" /></a>
        <hr />

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.PhotoID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
