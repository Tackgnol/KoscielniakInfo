@model KoscielniakInfo.Models.Job

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Role)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @if (Model.EndDate != null)
            {
                @Html.DisplayFor(model => model.EndDate)
            }
            else
            {
                <p>Currently working here</p>
            }

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>
        </dl>
    <hr />
    <h3>
        Projects in this job
    </h3>
        @foreach (var project in Model.Projects)
        {


            <p>

                <b>@project.Name - @project.Role</b>

                <br />

                @project.Description
            </p>
            <hr />
        }
 
        <h3>Photos</h3>

        @foreach (var photo in Model.Photos)
        {
            int i = 0;
            <a href="~/Pictures/@photo.URL"><img src="~/Pictures/Miniatures/@photo.URL" alt="@photo.Description" /></a>
            if (i % 3 == 0 && i >= 3)
            {
                <br />   }
            i++;
        }
</div>
<p>@if (User.IsInRole("Admin"))
{
   @Html.ActionLink("Edit", "Edit", new { id = Model.id }) <p>|</p>
}
    
    @Html.ActionLink("Back to List", "Index")
</p>
